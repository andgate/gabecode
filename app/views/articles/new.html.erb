<h1>New Article</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :article, url: articles_path do |f| %>
        <%= f.label :title %><br>
        <%= f.text_field :title, class: "form-control" %>
    
        <%= f.label :text %><br>
        <%= f.text_area :text, class: "form-control", rows: "3" %>
    
        <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>